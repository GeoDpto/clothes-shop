{% extends 'admin/base_admin.html.twig' %}

{% block body %}
    <h1>Categories:</h1>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">
            {% for category in categories %}
                    <h3>{{ category.title }}</h3>
                <br>
                <a href="{{ path('admin_category_update', {slug: category.slug}) }}">Show</a>
                <a href="#">Delete</a>
                <hr>
            {% endfor %}
        </div>
    </div>
{% endblock %}