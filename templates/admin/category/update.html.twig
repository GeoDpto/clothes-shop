{% extends 'admin/base_admin.html.twig' %}

{% block body %}
    {% if success %}
        <div style="background:greenyellow; padding:20px;">
            <h1>Category was successfully updated!</h1>
        </div>
    {% endif %}
    <h1>Category: {{ category.title }}</h1>
    <hr>
    {% if category.description %}
        <h3>Category Description:</h3>
        {{ category.description | raw }}
    {% endif %}
    <h3>Change category name:</h3>
    <div class="row">
        <div class="col-lg-6 col-md-12 col-xs-12">
            {{ form_start(EditCategoryForm) }}
                {{ form_row(EditCategoryForm.title) }}
                {{ form_row(EditCategoryForm.description) }}
                <button type="submit">Update Category</button>
            {{ form_end(EditCategoryForm) }}
        </div>
    </div>
    <hr>
    <h1>Products in this category:</h1>
    <hr>
    {% for product in products %}
        <div class="row">
            <div class="col-lg-12 col-md-12 col-xs-12">
                <h3>{{ product.title }}</h3>
                <span>Price: {{ product.price }}$</span><br>
                <a href="#">Update</a>
                <a href="#">Delete</a>
            </div>
        </div>
        <hr>
    {% endfor %}
{% endblock %}