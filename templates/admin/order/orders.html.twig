{% extends 'admin/base_admin.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">
            <h1>This page shows all orders.</h1>
        </div>
    </div>
    <hr>

    {% if not orders %}
        <h1>Order list is empty.</h1>
    {% endif %}
    {% for order in orders %}
    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">
            <h1>Order #{{ order.id }}</h1>
            <span>{{ order.date.format('Y.m.d H:m:s') }}</span>
            <br>
            <a href="{{ path('admin_order_show', {id: order.id}) }}">Show</a>
            <a href="{{ path('admin_order_delete', {id: order.id}) }}">Delete</a>
        </div>
    </div>
        <hr>
    {% endfor %}
{% endblock %}