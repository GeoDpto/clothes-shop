{% extends 'admin/base_admin.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">
            <h1>Order details</h1>
            <hr>
            <h2>Order #{{ order.id }}</h2>
            <span>Created at: {{ order.date.format('Y.m.d H:m:s') }}</span>
            <br>
            <h1>Customer:</h1>
            <h3>Name: {{ order.customer.firstName }} {{ order.customer.lastName }}</h3>
            {% if order.customer.companyName %}
            <h3>Company name: {{ order.customer.companyName }}</h3>
            {% endif %}
            <h3>Phone: {{ order.customer.phone }}</h3>
            <h3>Email: {{ order.customer.email }}</h3>
            <h3>Country: {{ order.customer.country }}</h3>
            <h3>First Address: {{ order.customer.firstAddress }}</h3>
            {% if order.customer.secondAddress %}
            <h3>Second Address: {{ order.customer.secondAddress }}</h3>
            {% endif %}
            <h3>City: {{ order.customer.city }}</h3>
            <h3>Post Code: {{ order.customer.postcode }}</h3>
        </div>
    </div>
    <hr>
    <h1>Order List:</h1>
    <ol>
    {% for product in order.productId %}
        <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">
            <li>
                <a href="{{ path('product', {id: product.id}) }}"><h2>{{ product.title }}</h2></a>
                <img src="{{ product.mainImage }}" alt="{{ product.title }}" style="max-width:300px;">
                <a href="{{ path('category', {slug: product.category.slug}) }}"><h4>Category: {{ product.category.title }}</h4></a>
                <span>Price: {{ product.price }}$</span>
            </li>
        </div>
    </div>
        <hr>
    {% endfor %}
    </ol>
{% endblock %}