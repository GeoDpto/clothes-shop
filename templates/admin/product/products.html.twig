{% extends 'admin/base_admin.html.twig' %}

{% block body %}
    <h1>This page shows all products.</h1>
    <button><a href="{{ path('admin_products_create') }}">Create product</a></button>
    <hr>
    <ol>
    {% for product in products %}
        <li>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-xs-12">
                <a href="#">
                    <h1>{{ product.title }}</h1>
                </a>
                <img src="{{ product.mainImage }}" alt="{{ product.title }}" style="max-width:300px"> <br>
                <span>Price: {{ product.price }}$</span>
                <a href="#">Show</a>
                <a href="#">Delete</a>
            </div>
        </div>
        </li>
        <hr>
    {% endfor %}
    </ol>
{% endblock %}